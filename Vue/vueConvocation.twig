    active
{% endblock %}


{% block title %}
Convocations sportives
{% endblock %}

{% block contenu %}
<!---------------------- CONVOCATION ---------------------->

<!-- voir la liste des convocs pour un match (tous les joueurs qui sont convoqués) -->
<!-- voir la liste des convocs pour un joueur (tous les matchs auxquels est convoqué le joueur) -->
<!-- ici la liste de toutes les convocs, le joueur et le match -->
<div class="row pt-5">
    <div class="row">
        <h1 class="col-5">Convocations par match</h1>
        <div class="alert alert-info alert-dismissible fade show col-7" role="alert">
            <strong>Note:</strong> Cliquez sur l'intitulé d'une convocation pour acceder aux informations la concernant.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <div class="col">
        <table class="table border table-striped table-hover">
            <thead>
            <tr>
                <th>Convocation</th>
                <th>Modifier</th>
                <th>Publier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
                {% for convocation in convocations %}
                    <tr>
                        <td>
                            <a href="index.php?action=informationsConvocation&num={{ convocation['NumConvoc'] }}" class="btn" role="button" style="text-align: left; width: 100%">
                                {{ convocation['Competition'] }} - {{ convocation['Equipe'] }} (le {{ convocation['Date']|date("d/m/Y") }})</a>
                        </td>
                        <td>
                            <form method="post" action="index.php?action=accesModifierConvocation&num={{ convocation['NumConvoc'] }}">
                                <button type="submit" class="btn btn-outline-dark border-0" {% if convocation['Publie'] %} hidden {% endif %}><i class="fa fa-pen"></i></button>
                            </form>
                        </td>
                        <td><form method="post" action="index.php?action={% if convocation['Publie'] %}depublier{% else %}publier{% endif %}">
                                <input type="hidden" name="num" value="{{ convocation['NumConvoc'] }}" />
                                <button type="submit" id="publication" {% if convocation['Publie'] %} class="btn btn-outline-secondary border-0"> <i class="fa fa-eye-slash"></i> {% else %} class="btn btn-outline-primary border-0"><i class="fa fa-eye"></i> {% endif %}</button>
                            </form>
                        </td>
                        <td>
                            <form method="post" action="index.php?action=supprimerConvocation">
                                <input type="hidden" name="num" value="{{ convocation['NumConvoc'] }}" />
                                <button type="submit" class="btn btn-outline-danger border-0"><i class="fa fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun convocation en cours</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row pt-5">
    <h1>Convocations Publiées</h1>
    <div class="col-9">
        <table class="table border table-striped table-hover">
            <thead>
            <tr>
                <th>Convocation Publiée</th>
                <th>Dépublier</th>
            </tr>
            </thead>
            {% for convocationPubliee in convocationsPubliees %}
                <tr>
                    <td><a href="index.php?action=informationsConvocation&num={{ convocationPubliee['NumConvoc'] }}" class="btn" role="button" style="text-align: left; width: 100%">
                            {{ convocationPubliee['Competition'] }} - {{ convocationPubliee['Equipe'] }} (le {{ convocationPubliee['Date']|date("d/m/Y") }})</a></td>
                    <td><form method="post" action="index.php?action=depublier">
                            <input type="hidden" name="num" value="{{ convocationPubliee['NumConvoc'] }}" />
                            <button type="submit" class="btn btn-outline-secondary border-0"><i class="fa fa-eye-slash"></i></button></form></td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucune convocation publiée</td>
                    </tr>
            {% endfor %}
        </table>
    </div>
</div>

