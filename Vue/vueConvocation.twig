<div class="row pt-5">
    <h1>Ajouter une Convocation</h1>
    <form method="post" action="index.php?action=ajouterConvocation">
        <div class="form-group row mb-3">
            <label for="convocationMatch" class="col-1 col-form-label">Match : </label>
            <div class="col-7">
                <select name="num" id="convocationMatch" class="form-select">
                {% for match in matchs %}
                    <option value="{{ match['NumMatch'] }}">{{ match['Competition'] }} - {{ match['Equipe'] }} le {{ match['Date']|date("d/m/Y") }}</option>
                {% endfor %}
                </select>
            </div>
        </div>
        <div class="row">

            <div class="col-6">
                    {% for i in 1..7 %}
                        <div class="form-group row">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend col-2">
                                    <label for="convocationJoueur{{ i }}" class="input-group-text">Joueur {{ i }} </label>
                                </div>
                                <div class="col">
                                    <select name="idJoueur{{ i }}" id="convocationJoueur{{ i }}" class="form-select" {% if i <= 11 %} required {% endif %} >
                                        <option value="" selected>choix</option>
                                    {% for joueur in joueurs %}
                                        <option value="{{ joueur['IdJoueur'] }}">{{ joueur['Prenom'] }} {{ joueur['Nom'] }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
            </div>
            <div class="col-6">
                {% for i in 8..14 %}
                    <div class="form-group row">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend col-2">
                                <label for="convocationJoueur{{ i }}" class="input-group-text">Joueur {{ i }} </label>
                            </div>
                            <div class="col">
                                <select name="idJoueur{{ i }}" id="convocationJoueur{{ i }}" class="form-select" {% if i <= 11 %} required {% endif %} >
                                    <option value="" selected>choix</option>
                                    {% for joueur in joueurs %}
                                        <option value="{{ joueur['IdJoueur'] }}">{{ joueur['Prenom'] }} {{ joueur['Nom'] }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="form-group row justify-content-center mt-2">
            <button type="submit" class="btn btn-primary col-3">Ajouter</button>
        </div>
    </form>
</div>

